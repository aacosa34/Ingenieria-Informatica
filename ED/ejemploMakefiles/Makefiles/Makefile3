BIN = bin
OBJ = obj
SRC = src
INC = inc

$(BIN)/main: $(OBJ)/main.o $(OBJ)/calculadora.o $(OBJ)/Numero.o
	echo Creando el ejecutable.
	g++ $^ -o $@

$(OBJ)/main.o: $(SRC)/main.cpp
	echo Creando el main.o.
	g++ -g -c -I./$(INC) $< -o $@

$(OBJ)/calculadora.o: $(SRC)/calculadora.cpp $(INC)/calculadora.h
	echo Creando el calculadora.o.
	g++ -g -c -I./$(INC) $< -o $@

$(OBJ)/Numero.o: $(SRC)/Numero.cpp $(INC)/Numero.h
	echo Creando el Numero.o.
	g++ -g -c -I./$(INC) $< -o $@

clean:
	echo Limpiando.
	-rm $(OBJ)/* $(BIN)/*

rebuild: clean $(BIN)/main

documentacion:
	echo Creando la documentacion.
	doxygen Doxyfile
